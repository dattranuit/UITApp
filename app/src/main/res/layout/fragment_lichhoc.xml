<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context=".lichhoc.LichHocFragment"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="Lịch học"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"

            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"
            >

        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Switch

        android:id="@+id/switch_lichhoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hình thức 2"

        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"

        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_ngayHoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_monhochinhthuc2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp" />


<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="*Lịch học thực tế có thể sai lệch"
    android:textAlignment="textEnd"
    android:layout_marginStart="30dp"

    android:layout_marginEnd="30dp"
    android:layout_marginBottom="30dp"
    />

</LinearLayout>