<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_bangdiem_thongtin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_home_title"
        android:fontFamily="sans-serif-light"
        android:paddingStart="10dp"
        android:paddingTop="3dp"
        android:paddingEnd="10dp"
        android:paddingBottom="3dp"
        android:text="hoc ky 1 2017 2019"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView


            android:id="@+id/tv_bangdiem_mamonhoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"

            android:text="MaMH"
            app:layout_constraintEnd_toStartOf="@+id/tv_diem_diem_tinchi"
            app:layout_constraintStart_toStartOf="parent"


            />

        <TextView
            android:id="@+id/tv_bangdiem_diem_tb"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"

            android:text="TB"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_bangdiem_diem_ck"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@color/white"
            android:text="CK"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@+id/tv_bangdiem_diem_tb" />

        <TextView
            android:id="@+id/tv_bangdiem_diem_gk"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"

            android:text="GK"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@+id/tv_bangdiem_diem_ck" />

        <TextView
            android:id="@+id/tv_bangdiem_diem_TH"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@color/white"
            android:text="TH"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@+id/tv_bangdiem_diem_gk" />

        <TextView
            android:id="@+id/tv_bangdiem_diem_qt"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"

            android:text="QT"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@+id/tv_bangdiem_diem_TH" />

        <TextView
            android:id="@+id/tv_bangdiem_diem_tc"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@color/white"
            android:text="TC"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@+id/tv_bangdiem_diem_qt" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView

        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/bg_line_1"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_bangdiem_diem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="0dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp">

        <TextView



            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"


            app:layout_constraintEnd_toStartOf="@+id/tv_diem_diem_tinchi"
            app:layout_constraintStart_toStartOf="parent"


            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:id="@+id/tv_bangdiem_tongket_tb"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:textStyle="bold"
            android:text="TB"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:id="@+id/tv_bangdiem_tongket_ck"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"


            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@+id/tv_bangdiem_tongket_tb"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:id="@+id/tv_bangdiem_tongket_gk"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"


            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@+id/tv_bangdiem_tongket_ck"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:id="@+id/tv_bangdiem_tongket_th"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"


            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@+id/tv_bangdiem_tongket_gk"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:id="@+id/tv_bangdiem_tongket_qt"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"


            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@+id/tv_bangdiem_tongket_th"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView

            android:textStyle="bold"
            android:id="@+id/tv_bangdiem_tongket_tc"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"

            android:text="TC"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@+id/tv_bangdiem_tongket_qt"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView

            android:id="@+id/textView6"
            android:layout_width="246dp"

            android:layout_height="1dp"
            android:background="@drawable/bg_line_1"
            app:layout_constraintStart_toStartOf="@+id/tv_bangdiem_tongket_tc" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>