<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_home_hienthingay"
    android:orientation="horizontal"
    android:layout_marginTop="15dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">
        <TextView
            android:id="@+id/tv_deadline_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mon Hoc"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_deadline_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Content"
            android:textSize="16dp"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/tv_deadline_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thoi gian"
            android:textSize="16sp"
            android:textColor="#000000"
            android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
            />
        <TextView
            android:id="@+id/tv_deadline_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_hourglass_empty_24"
            android:text="Trang thai"
            android:textSize="16sp"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/tv_deadline_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Da nop bai"
            android:drawableLeft="@drawable/ic_baseline_check_circle_24"
            android:textSize="16sp"
            android:textColor="#000000"
            />

        <Button
            android:id="@+id/btn_deadline_btn_view"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#ff0000"
            android:text="Xem"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>