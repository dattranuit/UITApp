<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_home_hienthingay"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    >

    <TextView
        android:id="@+id/tv_hocphi_hocky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HK 1, 2020-2021"
        android:textColor="@color/black"

        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="10dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:text="Số tiền phải đóng"

        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/tv_hocphi_hocky"
        app:layout_constraintTop_toBottomOf="@+id/tv_hocphi_hocky" />

    <TextView
        android:id="@+id/tv_hocphi_sotienphaidong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7,370,000"

        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/tv_hocphi_hocky" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:text="Số tiền đã đóng"

        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/tv_hocphi_sotiendadong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-371,000"

        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView

        android:id="@+id/tv_hocphi_trangthai"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:text="Còn thừa"

        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/tv_hocphi_chitiettrangthai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="40,000"

        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/tv_hocphi_trangthai"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

</androidx.constraintlayout.widget.ConstraintLayout>