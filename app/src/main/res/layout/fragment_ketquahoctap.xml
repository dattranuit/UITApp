<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context=".diem.BangDiemFragment"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="Kết quả học tập"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"

            android:layout_marginStart="30dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        >
        <TextView
            android:id="@+id/tv_kqht_tongket_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_home_title"
            android:fontFamily="sans-serif-light"
            android:paddingStart="10dp"
            android:paddingTop="3dp"
            android:paddingEnd="10dp"
            android:paddingBottom="3dp"
            android:text="Tổng kết"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_kqht_sotinchidahoc"

            android:layout_width="50dp"
            android:layout_height="wrap_content"


            android:text="84"
            android:textStyle="bold"
            android:padding="5dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_kqht_tongket_title" />

        <TextView


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:padding="5dp"
            android:text="Số tín chỉ đã học"
            android:textStyle="bold"


            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_kqht_sotinchidahoc" />


        <TextView
            android:id="@+id/tv_kqht_sotinchitichluy"

            android:layout_width="50dp"
            android:layout_height="wrap_content"


            android:padding="5dp"
            android:text="71"
            android:textStyle="bold"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_kqht_sotinchidahoc"
            app:layout_constraintTop_toBottomOf="@+id/tv_kqht_sotinchidahoc" />

        <TextView


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:padding="5dp"
            android:text="Số tín chỉ tích luỹ"
            android:textStyle="bold"


            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_kqht_sotinchitichluy" />

        <TextView
            android:id="@+id/tv_kqht_diemtrungbinh"

            android:layout_width="50dp"
            android:layout_height="wrap_content"


            android:padding="5dp"
            android:text="7.47"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_kqht_sotinchitichluy" />

        <TextView


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:padding="5dp"
            android:text="Điểm trung bình chung"
            android:textStyle="bold"


            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_kqht_diemtrungbinh" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_ketquahoctap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp" />




</LinearLayout>